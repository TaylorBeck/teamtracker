<h2>Game details:</h2>


Date: <%= @game.date %><br><br>

Time: <%= @game.time %><br><br>

Location: <%= @game.location %><br><br>

<h2>Player RSVPs</h2>


<%= render partial: "rsvp", collection: @game.rsvps %>

<% @game.players.each do |player| %>
  <fieldset class="player">
    <legend><b><%= player.name %></b></legend>
    <b>Gender:</b> <%= player.gender %><br>
    <b>Phone:</b>  <%= player.phone_number %><br>
  </fieldset>
<% end %>




