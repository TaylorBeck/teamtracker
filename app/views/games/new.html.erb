<h2>Create New Game</h2>

<% if @game.errors.any? %>
  <ul>
    <% @game.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @game do |f| %>
  <%= f.label :date %>:
  <%= f.date_field :date %><br>

  <%= f.label :time %>:
  <%= f.time_field :time %><br>

  <%= f.label :location %>:
  <%= f.text_field :location %><br>

  <%= f.label :team_id %>:
  <%= f.collection_select :team_id, Team.all, :id, :name %><br><br>

  <%= f.submit %>
<% end %>
